# API Keys
GOOGLE_API_KEY=your_google_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional if using different LLM

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google OAuth Configuration
CLIENT_CREDS_PATH=path/to/google/credentials.json
OAUTH_REDIRECT_URI=http://localhost:8080/callback  # Update for production deployment
OAUTH_SCOPES=  # Uses default scopes if not specified

# Database Configuration
USER_TOKENS_DB=user_tokens.db
CHECKPOINTER_DB=checkpoints.db  # For LangGraph conversation persistence

# Session and Storage Configuration
USER_SESSIONS_DIR=user_sessions
USER_FILES_DIR=user_files

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters_recommended
SECRET_KEY_SALT=your_unique_salt_here  # IMPORTANT: Generate a unique salt for production

# Session Management
SESSION_TIMEOUT=86400  # Session timeout in seconds (default: 24 hours)
MAX_MESSAGE_HISTORY=50  # Maximum messages to keep in conversation history

# File Upload Limits
MAX_FILE_SIZE=20971520  # Max file size in bytes (default: 20MB)
MAX_USER_STORAGE=104857600  # Max storage per user in bytes (default: 100MB)
FILE_RETENTION_HOURS=48  # How long to keep uploaded files (default: 48 hours)
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.txt,.csv,.png,.jpg,.jpeg,.gif,.zip

# Rate Limiting
RATE_LIMIT_MESSAGES=10  # Maximum messages per time window
RATE_LIMIT_WINDOW=60  # Time window in seconds

# Telegram API Timeouts (in seconds)
TELEGRAM_CONNECT_TIMEOUT=30.0
TELEGRAM_READ_TIMEOUT=60.0
TELEGRAM_WRITE_TIMEOUT=60.0
TELEGRAM_MEDIA_WRITE_TIMEOUT=120.0
TELEGRAM_POOL_SIZE=32

# Debugging and Logging
LANGGRAPH_DEBUG=false  # Set to true for LangGraph debug mode
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL